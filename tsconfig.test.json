{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictBindCallApply": false
  },
  "include": ["./packages/*/test"],
  "exclude": ["node_modules", "./packages/*/dist"]
}
